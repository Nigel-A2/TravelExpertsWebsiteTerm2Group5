@model TravelExpertsMVC.Data.Package

@{
    ViewData["Title"] = "Index";
}

<div>
    <h4>Book a package</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PackageId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PackageId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PkgName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PkgStartDate)
        </dt>
        <dd class="col-sm-10">
            @{ 
                string startDateValue = Model.PkgStartDate.GetValueOrDefault().ToShortDateString();
            }
            @Html.DisplayFor(model => startDateValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PkgEndDate)
        </dt>
        <dd class="col-sm-10">
            @{
                string endDateValue = Model.PkgEndDate.GetValueOrDefault().ToShortDateString();
            }
            @Html.DisplayFor(model => endDateValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PkgDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgDesc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PkgBasePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgBasePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PkgAgencyCommission)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgAgencyCommission)
        </dd>
    </dl>
</div>
<form asp-action="Order">
    <table class="table">

        <tr>
            <td>Number of people for this trip: </td>
            <td><input type="text" name="people" /></td>
        </tr>
        <tr>
            <td>
                Trip type:
            </td>
            <td>
                <select name="tripType" id="tripType">
                    <option value="B">Business</option>
                    <option value="L">Leisure</option>
                    <option value="G">Group</option>
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Order package" class="btn btn-primary" />
            </td>
        </tr>
        <tr style="display:none">
            <td><input type="text" name="package" value="@Model.PackageId"/></td>
        </tr>
    </table>
</form>
