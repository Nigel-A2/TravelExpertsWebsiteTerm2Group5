<div class="main-content">
    <table class="table">
        <tr>
            <th>Package Name</th>
            <th>Departure Date</th>
            <th>Return Date</th>
            <th>Description</th>
            <th>Price</th>
            <th> </th>
        </tr>

        @foreach (var packageDetail in Model.Packages)
        {
    <tr>
        <td>@packageDetail.PkgName</td>
        <td>@packageDetail.PkgStartDate.Value.ToString("d")</td>
        <td>@packageDetail.PkgEndDate.Value.ToString("d")</td>
        <td>@packageDetail.PkgDesc</td>
        <td>@packageDetail.PkgBasePrice.ToString("C")</td>
        <td> @Html.ActionLink("Order", "Details", packageDetail)</td>
    </tr>
        }

    </table>
</div>


