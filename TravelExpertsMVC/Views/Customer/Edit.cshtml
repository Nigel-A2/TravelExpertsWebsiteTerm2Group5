                <input asp-for="CustEmail" class="form-control" value="@Model.CustEmail"/>
                <span asp-validation-for="CustEmail" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="AgentId" class="control-label"></label>
                <input asp-for="AgentId" class="form-control" value="@Model.AgentId"/>
                <span asp-validation-for="AgentId" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
